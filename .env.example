KAFKA_BROKER=localhost:9092
SERVICE_PORT=47829
LOG_LEVEL=info
NOTIFICATION_TOPIC=notifications

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:password@localhost:5432/notification_db
# For Docker Compose: postgresql://postgres:password@postgres:5432/notification_db

# ============================================================================
# REDIS CONFIGURATION (for retry queue)
# ============================================================================
# Format: redis://[:password]@[host]:[port][/database]
REDIS_URL=redis://localhost:6379/0
# For Docker Compose: redis://redis:6379/0

# ============================================================================
# EMAIL PROVIDER CONFIGURATION
# ============================================================================
# Primary provider: gmail, sendgrid, mailgun, ses, postmark
EMAIL_PROVIDER=gmail
# Fallback providers (comma-separated): sendgrid,mailgun,ses,postmark
EMAIL_FALLBACK_PROVIDERS=sendgrid,mailgun,ses,postmark

# --- Gmail Configuration ---
GMAIL_FROM=your-email@gmail.com
# Note: Use App Password, not regular password
# Generate at: https://myaccount.google.com/apppasswords
GMAIL_APP_PASSWORD=xxxx xxxx xxxx xxxx

# --- SendGrid Configuration ---
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
SENDGRID_FROM=noreply@yourdomain.com

# --- Mailgun Configuration ---
MAILGUN_API_KEY=your_mailgun_api_key_here
MAILGUN_DOMAIN=mail.yourdomain.com
MAILGUN_FROM=noreply@yourdomain.com

# --- AWS SES Configuration ---
# Note: These credentials are also used for SNS if AWS is configured
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
SES_FROM=noreply@yourdomain.com

# --- Postmark Configuration ---
POSTMARK_SERVER_TOKEN=your_postmark_server_token
POSTMARK_FROM=noreply@yourdomain.com

# ============================================================================
# SMS PROVIDER CONFIGURATION
# ============================================================================
# Primary provider: twilio, sns, nexmo, africastalking, clickatell
SMS_PROVIDER=twilio
# Fallback providers (comma-separated): sns,nexmo,africastalking,clickatell
SMS_FALLBACK_PROVIDERS=sns,nexmo,africastalking,clickatell

# --- Twilio Configuration ---
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM_NUMBER=+1234567890

# --- AWS SNS Configuration ---
# Note: Uses AWS credentials above (AWS_ACCESS_KEY_ID, AWS_SECRET_ACCESS_KEY, AWS_REGION)

# --- Nexmo/Vonage Configuration ---
NEXMO_API_KEY=your_nexmo_api_key
NEXMO_API_SECRET=your_nexmo_api_secret
NEXMO_FROM=YourBrand

# --- Africa's Talking Configuration ---
AFRICASTALKING_API_KEY=your_africastalking_api_key
AFRICASTALKING_USERNAME=your_africastalking_username
# Optional: customize the API endpoint
# AFRICASTALKING_URL=https://api.africastalking.com/version1/messaging/bulk

# --- Clickatell Configuration ---
CLICKATELL_API_KEY=your_clickatell_api_key